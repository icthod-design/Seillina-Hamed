<a href="stories.html">‚Üê Back to Stories</a>

<script>
  function addBook() {
    const title = document.getElementById('title').value;
    const payment = document.getElementById('payment').value;
    const pdfLink = document.getElementById('pdfLink').value;

    const table = document.getElementById('booksTable');
    const row = table.insertRow(-1);
    row.insertCell(0).innerText = title;
    row.insertCell(1).innerText = "$" + payment;
    const linkCell = row.insertCell(2);
    const a = document.createElement('a');
    a.href = pdfLink;
    a.target = "_blank";
    a.innerText = "View PDF";
    linkCell.appendChild(a);

    // Reset form fields
    document.getElementById('title').value = '';
    document.getElementById('payment').value = '';
    document.getElementById('pdfLink').value = '';
  }
</script>

