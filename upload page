<form onsubmit="addBook(); return false;">
  <input type="text" id="title" placeholder="Book Title" required>
  <input type="number" id="payment" placeholder="Payment Amount (USD)" required>
  <input type="url" id="pdfLink" placeholder="Google Drive PDF Link" required>
  <button type="submit">Add Book</button>
</form>

<table id="booksTable">
  <tr>
    <th>Title</th>
    <th>Payment</th>
    <th>PDF Link</th>
  </tr>
